{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
     {
        "name": "client",
        "image": "asm494/multi-client",
        "hostname": "client",
        "essential": false,
        "memory": 128
     },
     {
        "name": "server",
        "image": "asm494/multi-server",
        "hostname": "api",
        "essential": false,
        "memory": 128
     },
     {  
        "name": "worker",
        "image": "asm494/multi-worker",
        "hostname": "worker",
        "essential": false,
        "memory": 128
     },
     {
        "name": "nginx",
        "image": "asm494/multi-nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [
            {
                "hostPort": 3050,
                "containerPort": 80
            }
        ],
        "mountPoints": [
            {
               "containerPath": "/var/log/nginx",
               "sourceVolume": "awseb-logs-NginxSSLRedirect"
            }
        ],
        "links": ["client", "server"],
        "memory": 128
     }  
    ]
}