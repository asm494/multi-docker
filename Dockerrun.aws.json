{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
     {
        "name": "client",
        "image": "asm494/multi-client",
        "hostname": "client",
        "essential": false
     },
     {
        "name": "server",
        "image": "asm494/multi-server",
        "hostname": "api",
        "essential": false
     },
     {  
        "name": "worker",
        "image": "asm494/multi-worker",
        "hostname": "worker",
        "essential": false
     },
     {
        "name": "nginx",
        "image": "asm494/multi-nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [
            {
                "hostPort": 3050,
                "containerPort": 80
            }
        ],
        "links": ["client", "server"]
     }  
    ]
}